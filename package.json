{
  "name": "jandrea-backend",
  "scripts": {
    "migration": "npx prisma migrate diff --from-schema-datamodel  ./prisma/prev.prisma  --to-schema-datamodel ./prisma/schema.prisma  --script --output migrations/0014_create_user_table.sql",
    "migrationEmpty": "npx prisma migrate diff --from-empty ./prisma/prev.prisma  --to-schema-datamodel ./prisma/schema.prisma  --script --output migrations/0004_create_user_table.sql",
    "database": "npx wrangler d1 migrations apply jandrea-products --remote",
    "generate":"pnpm prisma generate",
    "dev": " wrangler dev --remote",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250709.0",
    "@prisma/adapter-d1": "^6.11.1",
    "@prisma/client": "^6.11.1",
    "hono": "^4.8.4"
  },
  "devDependencies": {
    "prisma": "^6.11.1",
    "wrangler": "^4.4.0"
  }
}