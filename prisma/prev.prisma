generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"] // change from default
}

datasource db {
  provider = "sqlite" // d1 is sql base database
  url      = env("DATABASE_URL")
}

// Create a simple model database
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
model FacturaSinInva {
  id         String          @id @default(uuid())
  code       String?
  valueCupon Int?
  name       String
  email      String?
  phone      Int?
  address    String
  dni        Int?
  subTotal   Int
  total      Int

  products   ProductSchema[]
  discounts  DiscountSchema[]
}

model ProductSchema {
  id               Int            @id @default(autoincrement())
  productId        String?
  title            String
  price            Int
  quantity         Int
  facturaSinInva   FacturaSinInva @relation(fields: [facturaSinInvaId], references: [id])
  facturaSinInvaId String         
}

model DiscountSchema {
  id               Int            @id @default(autoincrement())
  title            String?
  amount           Int?
  cupon            Boolean?
  isValid          Boolean?
  facturaSinInva   FacturaSinInva @relation(fields: [facturaSinInvaId], references: [id])
  facturaSinInvaId String        
}
